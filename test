<script type="text/javascript">
	$(document).ready(function(){


  $("#button1").click(function(){

  	if($("#demo").is(":visible")){
  		console.log($("#demo").is(":visible")+"visible");
    $("#demo").hide();
    $("#demo2").hide();
     }
     else if($("#demo").is(":hidden")){  
  		console.log($("#demo").is(":hidden")+"hidden");
    $("#demo").show();
    $("#demo2").hide();
     }
   });

   $("#button2").click(function(){
   	if($("#demo2").is(":visible")){
  		console.log($("#demo").is(":visible")+"visible");
    $("#demo2").hide();
    $("#demo").hide();
     }
     else if($("#demo").is(":hidden")){  
  		console.log($("#demo").is(":hidden")+"hidden");
    $("#demo2").show();
    $("#demo").hide();
     }
   });
});
</script>
